<?import javafx.scene.control.*?>
<?import javafx.scene.layout.VBox?>

<VBox spacing="10" alignment="CENTER" xmlns="http://javafx.com/javafx"
      xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.tourism.controllers.EmergencyReportController">

    <Label text="Report Emergency"/>
    <TextArea fx:id="emergencyDetails" promptText="Describe the emergency..." prefWidth="400" prefHeight="200"/>
    <Button text="Submit" onAction="#handleSubmitEmergency"/>
</VBox>
