<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<AnchorPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            fx:controller="com.tourism.controllers.StaffController"
            prefHeight="600.0" prefWidth="800.0"
            style="-fx-background-color: #f4f4f4;">

    <!-- Header -->
    <Label fx:id="staffWelcomeLabel" layoutX="50.0" layoutY="30.0"
           text="Welcome, Staff!"
           style="-fx-font-size: 24px; -fx-font-weight: bold;" />

    <!-- Action Buttons -->
    <Button fx:id="newBookingButton" layoutX="85.0" layoutY="120.0"
            mnemonicParsing="false" prefHeight="36.0" prefWidth="180.0"
            text="New Booking" />

    <Button fx:id="emergencyContactsButton" layoutX="85.0" layoutY="170.0"
            mnemonicParsing="false" prefHeight="36.0" prefWidth="180.0"
            text="Emergency Contacts" />

    <Button fx:id="viewAttractionsButton" layoutX="85.0" layoutY="220.0"
            mnemonicParsing="false" prefHeight="36.0" prefWidth="180.0"
            text="View Attractions" />

    <Button fx:id="festivalDiscountButton" layoutX="85.0" layoutY="270.0"
            mnemonicParsing="false" prefHeight="36.0" prefWidth="180.0"
            text="Festival Discounts" />

    <!-- Logout -->
    <Button fx:id="staffLogoutButton" layoutX="85.0" layoutY="340.0"
            mnemonicParsing="false" prefHeight="36.0" prefWidth="180.0"
            style="-fx-background-color: #e74c3c; -fx-text-fill: white;"
            text="Logout" />

    <!-- Back Button -->
    <Button fx:id="backButton" layoutX="85.0" layoutY="390.0"
            mnemonicParsing="false" prefHeight="36.0" prefWidth="180.0"
            text="Back" />

    <!-- Footer -->
    <Label layoutX="50.0" layoutY="570.0"
           text="VisiNepal Staff Portal"
           style="-fx-font-size: 14px; -fx-text-fill: #888;" />
</AnchorPane>
