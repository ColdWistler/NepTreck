<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.Region?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tourism.controllers.StaffController"
            prefHeight="600.0" prefWidth="900.0" styleClass="dashboard-root">
    <top>
        <!-- Header -->
        <HBox alignment="CENTER_LEFT" spacing="20.0" styleClass="header">
            <children>
                <ImageView fitHeight="40.0" fitWidth="40.0" pickOnBounds="true" preserveRatio="true" styleClass="header-logo" />
                <Label styleClass="header-title" text="VisiNepalTech">
                    <font>
                        <Font name="System Bold" size="20.0" />
                    </font>
                </Label>
                <Region HBox.hgrow="ALWAYS" />
                <Label fx:id="staffWelcomeLabel" styleClass="header-welcome-label" text="Welcome, Staff" />
                <Button fx:id="staffLogoutButton" styleClass="header-logout-button" text="Logout" />
            </children>
            <padding>
                <Insets bottom="10.0" left="20.0" right="20.0" top="10.0" />
            </padding>
        </HBox>
    </top>
    <center>
        <HBox alignment="TOP_LEFT" spacing="20.0" styleClass="dashboard-container">
            <children>
                <!-- Left Panel - Navigation Buttons -->
                <VBox alignment="TOP_LEFT" spacing="15.0" prefWidth="200.0" styleClass="navigation-panel">
                    <children>
                        <Label styleClass="panel-title" text="Staff Actions">
                            <font>
                                <Font name="System Bold" size="16.0" />
                            </font>
                        </Label>
                        <Button fx:id="newBookingButton" maxWidth="Infinity" prefHeight="36.0" text="Create New Booking" styleClass="nav-button" />
                        <Button fx:id="emergencyContactsButton" maxWidth="Infinity" prefHeight="36.0" text="Emergency Contacts" styleClass="nav-button" />
                        <Button fx:id="viewAttractionsButton" maxWidth="Infinity" prefHeight="36.0" text="View Attractions" styleClass="nav-button" />
                        <Button fx:id="festivalDiscountButton" maxWidth="Infinity" prefHeight="36.0" text="Festival Discounts" styleClass="nav-button" />
                        <Region VBox.vgrow="ALWAYS" /> <!-- Pushes logout/back to bottom -->
                        <Button fx:id="backButton" maxWidth="Infinity" prefHeight="36.0" text="Back to Login" styleClass="nav-button-secondary" />
                    </children>
                    <padding>
                        <Insets bottom="20.0" left="15.0" right="15.0" top="20.0" />
                    </padding>
                </VBox>
                <!-- Right Panel - Content Area -->
                <VBox fx:id="contentArea" HBox.hgrow="ALWAYS" styleClass="content-area">
                    <!-- This VBox will be populated dynamically by StaffController -->
                    <padding>
                        <Insets bottom="10.0" left="10.0" right="10.0" top="10.0" />
                    </padding>
                    <Label text="Select an option from the left menu." style="-fx-font-size: 16px; -fx-text-fill: #555;" VBox.vgrow="ALWAYS" alignment="CENTER" />
                </VBox>
            </children>
            <padding>
                <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
            </padding>
        </HBox>
    </center>
</BorderPane>
