<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.tourism.controllers.LoginController">
    <center>
        <HBox alignment="CENTER" spacing="0.0" styleClass="login-container">
            <children>
                <!-- Left side - Image/Branding -->
                <VBox alignment="CENTER" prefWidth="400.0" styleClass="login-left-panel">
                    <children>
                        <!-- Placeholder for Nepal tourism image -->
                        <ImageView fitHeight="200.0" fitWidth="300.0" pickOnBounds="true" preserveRatio="true" styleClass="login-image">
                            <!-- Add your Nepal tourism image here -->
                        </ImageView>
                        <Label styleClass="login-brand-title" text="VisiNepalTech">
                            <font>
                                <Font name="System Bold" size="28.0" />
                            </font>
                        </Label>
                        <Label styleClass="login-brand-subtitle" text="Tourism Management System">
                            <font>
                                <Font size="16.0" />
                            </font>
                        </Label>
                        <!-- Placeholder for cultural pattern/design -->
                        <ImageView fitHeight="100.0" fitWidth="200.0" pickOnBounds="true" preserveRatio="true" styleClass="cultural-pattern">
                            <!-- Add Nepali cultural pattern image here -->
                        </ImageView>
                    </children>
                    <padding>
                        <Insets bottom="20.0" left="20.0" right="20.0" top="20.0" />
                    </padding>
                </VBox>

                <!-- Right side - Login Form -->
                <VBox alignment="CENTER" prefWidth="400.0" spacing="20.0" styleClass="login-right-panel">
                    <children>
                        <Label styleClass="login-title" text="Login">
                            <font>
                                <Font name="System Bold" size="24.0" />
                            </font>
                        </Label>

                        <VBox spacing="15.0" styleClass="login-form">
                            <children>
                                <VBox spacing="5.0">
                                    <children>
                                        <Label styleClass="form-label" text="Username:" />
                                        <TextField fx:id="usernameField" promptText="Enter your username" styleClass="form-input" />
                                    </children>
                                </VBox>

                                <VBox spacing="5.0">
                                    <children>
                                        <Label styleClass="form-label" text="Password:" />
                                        <PasswordField fx:id="passwordField" promptText="Enter your password" styleClass="form-input" />
                                    </children>
                                </VBox>

                                <VBox spacing="5.0">
                                    <children>
                                        <Label styleClass="form-label" text="Language:" />
                                        <ComboBox fx:id="languageComboBox" onAction="#handleLanguageChange" prefWidth="200.0" styleClass="form-combo" />
                                    </children>
                                </VBox>

                                <Label fx:id="errorLabel" styleClass="error-label" visible="false" />

                                <Button fx:id="loginButton" mnemonicParsing="false" prefWidth="200.0" styleClass="primary-button" text="Login" />
                            </children>
                        </VBox>
                    </children>
                    <padding>
                        <Insets bottom="40.0" left="40.0" right="40.0" top="40.0" />
                    </padding>
                </VBox>
            </children>
        </HBox>
    </center>
</BorderPane>