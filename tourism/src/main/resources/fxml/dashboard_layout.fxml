<?xml version="1.0" encoding="UTF-8"?>

<BorderPane xmlns="http://javafx.com/javafx"
            xmlns:fx="http://javafx.com/fxml"
            prefWidth="1000" prefHeight="600">

    <!-- Sidebar -->
    <left>
        <VBox spacing="15" style="-fx-background-color: #f4f4f4;" padding="20">
            <!-- Sidebar items go here -->
        </VBox>
    </left>

    <!-- Top Bar -->
    <top>
        <HBox alignment="CENTER_RIGHT" spacing="10" padding="10" style="-fx-background-color: #ffffff;">
            <!-- Top bar items go here -->
        </HBox>
    </top>

    <!-- Main Content Area -->
    <center>
        <VBox spacing="20" padding="20">
            <!-- Main dashboard content goes here -->
        </VBox>
    </center>

</BorderPane>
